= simple_form_for([:admin, @post], class: 'form') do |f|
  = f.error_notification

  .form-inputs
    .form-group
      = f.input :title, input_html: { class: 'form-control' }, label: false
    .form-group
      = f.cktext_area :body, input_html: { class: 'form-control' }
    .form-group
      = f.input :categories, collection: Category.all, selected: @post.categories.collect { |c| c.id }, label: false, input_html: { class: 'form-control', id: 'category-select', multiple: true }, as: :select

  .form-actions
    = f.button :submit

:javascript
  $('#category-select').select2({}); 
