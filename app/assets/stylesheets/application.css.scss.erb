body { 
  margin-top: 50px; 
  font-family: "Georgia"; 
  font-size: 280%;
  line-height: 170%;  
  color: #828282; 
} 

p { 
  font-family: inherit; 
  font-size: inherit;
  line-height: inherit; 
} 

#banner {
  width: 100%;
  height: 600px; 
  min-height: 400px; 
  background-image: url(<%= asset_path 'assets/woods.jpg' %>); 
  //background-size:  100% 300px;
}

main { 
  width: 50%; 
  min-width: 800px; 
  margin-top: 0; 
  padding-top: 50px; 
  background-color: #fff; 
}

.post-body {
  font-family: "Arial"; 
  font-size: xx-large;  
}

.navbar-default { 
  border: 0; 
  background-color: #2E2E2E;
}

.navbar-brand, .navbar-nav li a {
  height: 70px; 
  line-height: 35px; 
} 

.vertical-line { 
  border-right: 1px solid #515151; 
  float: left;
  height: 70px; 
} 
