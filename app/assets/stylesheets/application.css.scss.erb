@font-face {
  font-family: 'Fanwood';
  src: url('/assets/fanwood-webfont.eot');
  src: url('/assets/fanwood-webfont.woff') format('woff'),
       url('/assets/fanwood-webfont.ttf') format('truetype'),
       url('/assets/fanwood-webfont.svg') format('svg');
}

body { 
  margin-top: 0px; 
  font-family: "Fanwood"; 
  font-size: 240%;
  line-height: 170%;  
  color: #828282; 
} 

p { 
  font-family: inherit; 
  font-size: inherit;
  line-height: inherit; 
} 

#banner {
  margin-top: -20px; 
  padding: 0; 
  width: 100%;
  height: 400px; 
  text-align: center; 
  background-image: url(<%= asset_path 'assets/woods.jpg' %>);
  background-repeat: no-repeat; 
  background-position: center; 
  background-color: black; 
  -webkit-filter: sepia(0.6); 
}

#banner-heepster {
  font-size: 72px; 
  margin-bottom: 25px; 
} 

#banner-about {
  font-size: 18px; 
} 

#banner-container { 
  position: relative; 
  width: 600px; 
  margin: 0 auto; 
  font-family: 'Helvetica Neue', 'Helvetica'; 
  color: #FFF; 
  top: 40%; 
  -webkit-font-smoothing: antialiased; 
  -webkit-transform: translateY("-50%"); 
  transform: translateY("-50%");  
}

 
#banner-about a:link, 
#banner-about a:visited,
#banner-about a:hover {
  color: #CCC;
  background: none; 
  text-transform: none; 
}

#banner-heepster a:link, 
#banner-heepster a:visited,
#banner-heepster a:hover {
  color: #FFF;
  background: none; 
  text-transform: none; 
}

#about-img {
  width: 250px;
  height: 250px;
  margin-top: 90px; 
  margin-bottom: 20px; 
  border-radius: 150px;
  -webkit-border-radius: 125px;
  -moz-border-radius: 125px;
  background-size: 250px 250px; 
  background-image: url(<%= asset_path 'assets/me.jpg' %>); 
}

main { 
  width: 60%; 
  min-width: 800px; 
  margin-top: 0; 
  padding-top: 50px; 
  background-color: #fff; 
}

.vertical-line { 
  border-right: 1px solid #cecece; 
  float: left;
  height: 50px; 
} 
 
#main-title { 
  font-size: 400%; 
  color: #FFF; 
} 

.complete-center {
  text-align: center; 
  position: relative; 
  top: 50%; 
  transform: translateY(-50%); 
}

.symbol-sm {
  font-size: 70%; 
} 

